<% include ../pizzas/header %>

<div class="container mt-5 p-5">
  <form action="/pizzas/save" method="post" enctype="multipart/form-data" class="bg-warning rounded">
    <div class="text-center p-3">
      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <input type="text" class="form-control" name="name" placeholder="Name of the pizza" />
        </div>
      </div>
      <!-- CHECKBOX CONTAINER -->
      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <legend class="col-form-label col-sm-2 pt-0">
            Ingredients
          </legend>
          <!-- CHECKBOX INSIDE -->
          <div class="col-sm-10">
            <div class="form-check text-left">
              <% for(let i=0; i< ingredients.length; i++){ %>
              <input class="form-check-input" type="checkbox" name="ingredients" id="gridRadios1"
                value="<%= ingredients[i].name %>" />
              <label class="form-check-label" for="gridRadios1">
                <p>
                  <%= ingredients[i].name%>
                </p>
                <% } %>
              </label>
            </div>

          </div>
        </div>
      </div>
      <!-- FINE CHECKBOX CONTAINER -->
      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <textarea type="text" class="form-control" name="description" placeholder="Description"></textarea>
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <input type="text" class="form-control" name="difficulties" placeholder="Difficulties?" />
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <input type="number" name="expense" class="form-control" placeholder="Average price" />
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <input type="file" name="picturePizza" class="btn btn-danger rounded form-control" />
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          <input type="submit" value="SAVE" class="btn btn-success rounded form-control" />
        </div>
      </div>
  </form>
</div>