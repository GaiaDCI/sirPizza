<% include ../pizzas/header %>

<div class="container mt-5 p-5">
  <div class="p-3">

    <div class="form-row justify-content-center">
      <div class="form-group col-md-4">
        <img class="card-img-top responsive" src="<%= pizza.image %>" alt="" style="padding:0; width: 100%; height: 100%; max-width: 400px; max-height: 200px" />
      </div>
    </div>

    <div class="form-row justify-content-center">
      <div class="form-group col-md-4 text-center">
        <h5>
          <%= pizza.name %>
        </h5>
      </div>
    </div>

    <div class="form-row justify-content-center">
      <label class="form-group">Ingredients:</label>
      <div class="form-group col-md-4 bg-light rounded">

        <% ingredients.forEach(ingredient => { %>
        <%= ingredient.name %>
        <% }) %>
      </div>
    </div>

    <div class="form-row justify-content-center">
      <div class="form-group col-md-4 bg-light rounded">
        <%= pizza.description%>
      </div>
    </div>

    <div class="form-row justify-content-center">
      <div class="form-group col-md-4 bg-light rounded">
        <%= pizza.difficulties%>
      </div>
    </div>

    <div class="form-row justify-content-center">
      <div class="form-group col-md-4 bg-light rounded">
        <%= pizza.expense%>
      </div>
    </div>

    <div class="form-inline justify-content-center">
      <form action="/pizzas/edit/<%=pizza._id%>" method="get">
        <button class="btn bg-success m-2 text-light font-weight-bold rounded" type="submit">EDIT</button>
      </form>
      <form action="/pizzas/delete/<%=pizza._id%>" method="post">
        <button type="submit" class="btn btn-danger rounded">
          <i class="far fa-trash-alt"></i></button>
      </form>
    </div>

    </form>
  </div>