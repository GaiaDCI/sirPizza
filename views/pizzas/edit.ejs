<% include ../pizzas/header %>

<div class="container mt-5 p-5">
  <form action="/pizzas/update/<%= pizza._id %>" method="post" class="bg-warning rounded">
    <div class="p-3">

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">Name:
        </div>
        <input type="text" value="<%= pizza.name %>" name="name" class="form-group col-md-4" />
      </div>

      <!-- CHECKBOX CONTAINER DA INSERIRE DA RIMUOVERE? -->
      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">
          Main ingredients:
        </div>
        <!-- <% for(let i=0; i< ingredients.length; i++){ %>
          <input class="form-control" type="checkbox" name="ingredient" value="<%= ingredients[i]._id %>">
          <%= ingredients.name %>
          <% } %> -->
        <div class="form-group justify-content-center text-center">
          <% ingredients.forEach(ingredient => { %>
          <input class="form-group col-md-4" type="checkbox" value="<%= pizza.ingredients %>" name="ingredients" />
          <%= ingredient.name %>
          <% }) %>
        </div>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">Description:</div>
        <textarea type="text" name="description" class="form-group col-md-4">
            <%= pizza.description %>
          </textarea>
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">Difficulties:</div>
        <input type="text" name="difficulties" value="<%= pizza.difficulties %>" class="form-group col-md-4" />
      </div>

      <div class="form-row justify-content-center">
        <div class="form-group col-md-4">Average Price:
        </div>
        <input type="text" value="<%= pizza.expense %>" name="expense" class="form-group col-md-4"
          placeholder="Recipe's average price:" />
      </div>

      <div class="form-inline justify-content-center">
        <div class="form-group m-2">
          <input type="submit" value="CONFIRM" class="btn btn-success rounded form-control" />
        </div>
        <form action="/pizzas/delete/<%=pizza._id%>" method="post">
          <button type="submit" class="btn btn-danger rounded form-control">
            <i class="far fa-trash-alt"></i>
          </button>
        </form>

      </div>
    </div>

</div>
</form>
</div>